<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rlAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAnimate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/discount"
            android:contentDescription="@string/to_do"
            android:text="discount"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgShineEffect"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/btnAnimate"
            android:layout_alignTop="@+id/btnAnimate"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/to_do"
            android:elevation="16dp"
            android:rotation="25"
            android:src="@drawable/shine_effect" />

        <ImageView
            android:id="@+id/imgShineEffect2"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/btnAnimate"
            android:layout_alignTop="@+id/btnAnimate"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/to_do"
            android:elevation="16dp"
            android:rotation="25"
            android:src="@drawable/shine_effect" />

    </RelativeLayout>


</RelativeLayout>